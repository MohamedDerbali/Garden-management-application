    </head>

    <body>

    </body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url('{{ asset('images/edit.jpg') }}');">
					<span class="login100-form-title-1">
						Modifier profile
					</span>

                </div>
                <center>
                {% trans_default_domain 'FOSUserBundle' %}
                <div style="display: flex;flex-direction: column;align-items: center">
                    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                    {{ form_row(form.nom ) }}
                    {{ form_row(form.prenom ) }}
                    {{ form_row(form.adresse ) }}
                    <i class="categorie">
                     {{ form_row(form.categorie) }}
                    </i>

                    {{ form_widget(form) }}
                    {% if is_granted('ROLE_CLIENT') %}

                        <script type="application/javascript" src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
                             <script>
                        $(".categorie").hide();
                        </script>


                    {% endif %}



                    <div>
                        <input class="btn btn--primary" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                    </div>
                    {{ form_end(form) }}
                </div>

                </center>
            </div>
        </div>

        <!--===============================================================================================-->
        <script src="{{ asset('login/vendor/jquery/jquery-3.2.1.min.js') }}"></script>
        <!--===============================================================================================-->
        <script src="{{ asset('login/vendor/animsition/js/animsition.min.js') }}"></script>
        <!--===============================================================================================-->
