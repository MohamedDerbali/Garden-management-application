        <!--===============================================================================================-->
        <script src="{{ asset('login/vendor/countdowntime/countdowntime.js') }}"></script>
        <!--===============================================================================================-->
        <script src="{{ asset('login/js/main.js') }}"></script>
        {#//for signup#}
        <script src="{{ asset('js/Signup/verif.js') }}"></script>
    </html>

