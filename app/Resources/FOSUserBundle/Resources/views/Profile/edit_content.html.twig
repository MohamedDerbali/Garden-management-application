        <style>
            #align_allsections
            {
                display: flex;
                justify-content: center;
            }
            #section1
            {
                position: relative;
                right: 35px;
                margin-top: 20px;
                display: flex;
                flex-direction: column;
                align-content: center;
            }
            #section2
            {
                position: relative;
                left: 35px;
                margin-top: 20px;
                display: flex;
                flex-direction: column;
                align-content: center;
            }
            /*form cadre*/
            .limiter
            {
                position: relative;
                top: 40px;
            }
            /*input=user on click(focus)*/
            #fos_user_profile_form_email,
            #fos_user_profile_form_username,
            #fos_user_profile_form_current_password,
            #fos_user_profile_form_nom,
            #fos_user_profile_form_prenom,
            #fos_user_profile_form_adresse
            {
                font-size: 15px;
                line-height: 1.5;
                color: #666666;
                display: block;
                width: 100%;
                background: #e6e6e6;
                height: 50px;
                border-radius: 10px;
                padding: 0 25px 0 60px;
                border: none;
                transition: all .5s;
            }
            /*input=user role*/
            #fos_user_profile_form_roles
            {
                font-size: 15px;
                line-height: 1.5;
                color: #666666;
                display: block;
                width: 100%;
                background: #e6e6e6;
                height: 50px;
                border-radius: 10px;
                padding: 0 25px 0 60px;
                border: none;
                transition: all .5s;
                padding-top: 5px;
                overflow: hidden;
            }
            /*inputs=user*/
            #fos_user_profile_form_email:focus,
            #fos_user_profile_form_username:focus,
            #fos_user_profile_form_current_password:focus,
            #fos_user_profile_form_plainPassword_first:focus,
            #fos_user_profile_form_nom:focus,
            #fos_user_profile_form_prenom:focus,
            #fos_user_profile_form_adresse:focus
            {
                border: 2px solid #0fc491;
                transition: all .5s;
            }
            /*input=user signup btn*/
            #signup-btn
            {
                margin-top: 20px;
                font-size: 10px;
                line-height: 1.5;
                color: #fff;
                display: block;
                width: 80%;
                background: #0d1248;
                height: 50px;
                border-radius: 10px;
                padding: 0 25px 0 60px;
                border: none;
            }
        </style>
        {#<style type="text/css">#}
        {##username{#}
        {#background-color:whitesmoke;#}
        {#height: 10px;#}
        {#padding: 15px;#}
