{% extends 'Admin.html.twig' %}

{% block body %}


    {% for flashMessage in app.session.flashbag.get('notice') %}

        <div class="alert alert-success">
            {{ flashMessage }}
        </div>

    {% endfor %}
    <h1>Events list</h1>
<ul class="nav navbar-right panel_toolbox">
    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
    </li>

</ul>
<div class="clearfix"></div>

<div class="x_content">
    <table id="datatable" class="table table-striped table-bordered">

        <thead>
            <tr>

                <th>Datedeb</th>
                <th>Description</th>
                <th>Adresseevent</th>
                <th>Nomevent</th>
                <th>Fraisparticpation</th>
                <th>Nbre_participant</th>
                <th>Img</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>

                <td>{% if event.dateDeb %}{{ event.dateDeb|date('Y-m-d') }}{% endif %}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.adresseEvent }}</td>
                <td>{{ event.nomEvent }}</td>
                <td>{{ event.fraisParticpation }}</td>
                <td>{{ event.nbreparticipant }}</td>
                <td><img src="{{ asset('images/events/'~event.img) }}"/></td>
                <td>

                            <a href="{{ path('events_delete', { 'idEvent': event.idEvent }) }}"><button type="button" class="btn btn-danger">Suppression</button></a>
                            <a href="{{ path('events_edit', { 'idEvent': event.idEvent }) }}"><button type="button" class="btn btn-danger">Edit</button></a>
                            <a href="{{ path('part', { 'idEvent': event.idEvent }) }}"><button type="button" class="btn btn-danger">Participer</button></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('events_new') }}">Create a new event</a>
        </li>
    </ul>
{% endblock %}
